{
    "version": "2.0.0",
    "tasks": [
        // ...existing tasks...
        {
            "label": "Wails Build",
            "type": "shell",
            "command": "wails",
            "args": ["build"],
            "group": "build",
            "isBackground": false,
            "problemMatcher": ["$go"]
        },
        {
            "label": "Wails Dev",
            "type": "shell",
            "command": "wails",
            "args": ["dev"],
            "group": "build",
            "isBackground": true,
            "problemMatcher": ["$go"]
        },
        {
            "label": "Run Application",
            "type": "shell",
            "command": "${workspaceFolder}\\build\\bin\\my-ai-gen.exe",
            "group": "test",
            "isBackground": true,
            "dependsOn": "Wails Build"
        }
    ]
}